{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "core:window:allow-show",
        "core:window:allow-set-title",
        "libmpv:default",
        "dialog:default",
        "dialog:allow-open",
        "fs:default",
        "fs:allow-app-read",
        "fs:allow-app-write",
        "fs:allow-app-read-recursive",
        "fs:allow-app-write-recursive",
        "shell:allow-open"
    ]
}
